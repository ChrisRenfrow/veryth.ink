---
import siteInfo, { type SocialLink } from '~/data/site-info.ts'

const { author, socials } = siteInfo

const year = new Date().getFullYear()
---

<footer class="pb-4 flex flex-col md:flex-row justify-between">
  <span>&copy; {year} {author}. All rights reserved.</span>
  <div class="order-first md:order-last flex flex-row space-x-2">
    {
      socials.map((s) => (
        <a
          class="underline decoration-2 decoration-orange-600 hover:bg-orange-600 hover:text-stone-800"
          href={s.href}
        >
          {s.platform}
        </a>
      ))
    }
  </div>
</footer>
