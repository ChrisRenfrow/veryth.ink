---
import siteInfo, { type SocialLink } from '~/data/site-info.ts'

const { author, socials } = siteInfo

const year = new Date().getFullYear()
---

<footer class="flex flex-col justify-between pb-4 md:flex-row">
  <span>&copy; {year} {author}. All rights reserved.</span>
  <div class="order-first flex flex-row space-x-2 md:order-last">
    {
      socials.map((s: SocialLink) => (
        <a
          class="underline decoration-orange-600 decoration-2 hover:bg-orange-600 hover:text-stone-800"
          href={s.href}
        >
          {s.platform}
        </a>
      ))
    }
  </div>
</footer>
