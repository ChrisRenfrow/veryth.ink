---
const { page } = Astro.props
---

{
  page.lastPage > 1 && (
    <div
      class="flex flex-row justify-between py-10"
      role="navigation"
      aria-label="Pagination"
    >
      {page.url.prev ? (
        <a
          class="underline decoration-orange-600 decoration-2 hover:bg-orange-600 hover:text-stone-800"
          href={page.url.prev}
          aria-label="Previous page"
        >
          <span aria-hidden="true">&larr;</span> prev
        </a>
      ) : (
        <span class="text-stone-400 dark:text-stone-600">
          <span aria-hidden="true">&larr;</span> prev
        </span>
      )}
      <span aria-current="page">{`${String(page.currentPage).padStart(2, '0')} of ${String(page.lastPage).padStart(2, '0')}`}</span>
      {page.url.next ? (
        <a
          class="underline decoration-orange-600 decoration-2 hover:bg-orange-600 hover:text-stone-800"
          href={page.url.next}
          aria-label="Next page"
        >
          next <span aria-hidden="true">&rarr;</span>
        </a>
      ) : (
        <span class="text-stone-400 dark:text-stone-600">
          next <span aria-hidden="true">&rarr;</span>
        </span>
      )}
    </div>
  )
}
