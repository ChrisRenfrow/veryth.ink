---
import type { NestedHeading } from './Toc.astro'

export interface Props {
  heading: NestedHeading
}

const { heading } = Astro.props
---

<li>
  <p class="pl-1">
    <a
      class="underline decoration-orange-600 hover:bg-orange-600 hover:text-stone-800 decoration-2"
      href={`#${heading.slug}`}
    >
      {heading.text}
    </a>
  </p>
  {
    heading.sub_headings.length > 0 && (
      <ul class="pl-2">
        {heading.sub_headings.map((sub_heading) => (
          <Astro.self heading={sub_heading} />
        ))}
      </ul>
    )
  }
</li>
