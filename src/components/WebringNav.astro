---
interface Props {
  label: string
  prev: string
  next: string
  random?: string
  home?: string
}

const { label, prev, next, random, home } = Astro.props
---

<nav
  class="flex flex-wrap items-center justify-between py-2"
  aria-label={label}
>
  <a
    href={prev}
    class="underline decoration-orange-600 decoration-2 hover:bg-orange-600 hover:text-stone-800"
    aria-label="Previous site in webring"
  >
    <span aria-hidden="true">&larr;</span>
    <span>prev</span>
  </a>
  {
    home && label ? (
      <a
        href={home}
        class="underline decoration-orange-600 decoration-2 hover:bg-orange-600 hover:text-stone-800"
        aria-label={`${label} home`}
      >
        {label}
      </a>
    ) : (
      <span class="font-bold text-stone-100">{label}</span>
    )
  }
  {
    random && (
      <a
        href={random}
        class="underline decoration-orange-600 decoration-2 hover:bg-orange-600 hover:text-stone-800"
        aria-label="Random site in webring"
      >
        random
      </a>
    )
  }
  <a
    href={next}
    class="underline decoration-orange-600 decoration-2 hover:bg-orange-600 hover:text-stone-800"
    aria-label="Next site in webring"
  >
    <span>next</span>
    <span aria-hidden="true">&rarr;</span>
  </a>
</nav>
