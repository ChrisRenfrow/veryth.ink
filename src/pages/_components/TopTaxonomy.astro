---
interface Props {
  items: { slug: string; label: string; postCount: number }[]
  taxonomyLabel: string
  baseUrl: string
  prefix?: string
}

const { items, taxonomyLabel, baseUrl, prefix = '' } = Astro.props
---

<div class="not-prose flex flex-col gap-4 pb-4">
  <h2
    class="text-xl font-bold lowercase text-stone-900 underline dark:text-stone-100"
    >Top {taxonomyLabel}</h2
  >
  <div class="inline-flex flex-wrap gap-x-2">
    {
      // prettier-ignore
      items.map(({ slug, label, postCount }) => (
        <span class="after:content-[','] last:after:content-none"><a class="underline decoration-orange-600 decoration-2 hover:bg-orange-600 hover:text-stone-800 dark:text-stone-100" href={`${baseUrl}/${slug}`}>{`${prefix}${label} (${postCount})`}</a></span>
      ))
    }
  </div>
  <span
    ><a
      class="lowercase underline decoration-orange-600 decoration-2 hover:bg-orange-600 hover:text-stone-800 dark:text-stone-100"
      href={`${baseUrl}`}>All {taxonomyLabel} &rarr;</a
    ></span
  >
</div>
