---
import type { CollectionEntry } from 'astro:content'
import BaseLayout from '@layouts/BaseLayout.astro'
import { getCategories } from '~/helpers/queries'

const categories: string[][] = await getCategories()
---

<BaseLayout>
  <h1 class="text-4xl pb-5">all categories</h1>
  <div class="text-2xl grid grid-cols-2 grid-flow-row gap-3">
    {
      categories.map((category) => (
        <a
          class="text-orange-600 hover:text-stone-800 hover:bg-orange-600 underline"
          href={`/blog/categories/${category[0]}`}
        >
          #{category[1]}
        </a>
      ))
    }
  </div>
</BaseLayout>
