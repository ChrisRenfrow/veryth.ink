---
import BaseLayout from '@layouts/BaseLayout.astro'
import type { CollectionEntry } from 'astro:content'
import { getAllPosts } from '~/helpers/queries'
import { slugify } from '~/helpers/utils'

const posts: CollectionEntry<'blog'>[] = await getAllPosts()

const catMap: Map<string, string> = new Map()

posts.forEach((post) => {
  let category = post.data.category ?? 'uncategorized'
  catMap.has(slugify(category)) || catMap.set(slugify(category), category)
})

const categories: string[][] = Array.from(catMap).sort((a, b) => {
  let aUpper = a[0].toUpperCase()
  let bUpper = b[0].toUpperCase()
  return aUpper < bUpper ? -1 : aUpper > bUpper ? 1 : 0
})
---

<BaseLayout>
  <h1 class="text-4xl pb-5">all categories</h1>
  <div class="text-2xl grid grid-cols-2 grid-flow-row gap-3">
    {
      categories.map((category) => (
        <a
          class="text-orange-600 underline"
          href={`/blog/categories/${category[0]}`}
        >
          #{category[1]}
        </a>
      ))
    }
  </div>
</BaseLayout>
