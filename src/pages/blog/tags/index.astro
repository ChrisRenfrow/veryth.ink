---
import type { CollectionEntry } from 'astro:content'
import BaseLayout from '@layouts/BaseLayout.astro'
import { getTags } from '~/helpers/queries'

const tags: string[][] = await getTags()
---

<BaseLayout>
  <h1 class="pb-5 text-4xl">all tags</h1>
  <div class="grid grid-flow-row grid-cols-2 gap-3 text-2xl">
    {
      tags.map((tag) => (
        <a
          class="text-orange-600 underline hover:bg-orange-600 hover:text-stone-800"
          href={`/blog/tags/${tag[0]}`}
        >
          #{tag[1]} ({tag[2]})
        </a>
      ))
    }
  </div>
</BaseLayout>
