---
import BaseLayout from '@layouts/BaseLayout.astro'
import { getTags } from '~/helpers/queries'

const tags = await getTags()
---

<BaseLayout>
  <h1 class="pb-5 text-2xl font-bold">tags/</h1>
  <hr class="border-t-2 border-stone-400 pb-5" />
  <div
    class="mr-auto grid grid-flow-row gap-4 text-xl sm:grid-cols-2 md:grid-cols-3 md:gap-y-2"
  >
    {
      tags.map(({ slug, label, postCount }) => (
        <span>
          <a
            class="underline decoration-orange-600 decoration-2 hover:bg-orange-600 hover:text-stone-800"
            href={`/blog/tags/${slug}`}
          >
            #{label} ({postCount})
          </a>
        </span>
      ))
    }
  </div>
</BaseLayout>
