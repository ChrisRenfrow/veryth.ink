---
import type { CollectionEntry } from 'astro:content'
import BaseLayout from '@layouts/BaseLayout.astro'
import { getTags } from '~/helpers/queries'

const tags: string[][] = await getTags()
---

<BaseLayout>
  <h1 class="text-4xl pb-5">all tags</h1>
  <div class="text-2xl grid grid-cols-2 grid-flow-row gap-3">
    {
      tags.map((tag) => (
        <a
          class="text-orange-600 hover:text-stone-800 hover:bg-orange-600 underline"
          href={`/blog/tags/${tag[0]}`}
        >
          #{tag[1]}
        </a>
      ))
    }
  </div>
</BaseLayout>
