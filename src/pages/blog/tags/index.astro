---
import type { CollectionEntry } from 'astro:content'
import BaseLayout from '@layouts/BaseLayout.astro'
import { getTags } from '~/helpers/queries'

const tags: string[][] = await getTags()
---

<BaseLayout>
  <h1 class="pb-5 text-4xl">all tags</h1>
  <div
    class="mr-auto grid grid-flow-row gap-4 text-xl sm:grid-cols-2 md:grid-cols-3 md:gap-y-2"
  >
    {
      tags.map((tag) => (
        <span>
          <a
            class="underline decoration-orange-600 decoration-2 hover:bg-orange-600 hover:text-stone-800"
            href={`/blog/tags/${tag[0]}`}
          >
            #{tag[1]} ({tag[2]})
          </a>
        </span>
      ))
    }
  </div>
</BaseLayout>
