---
import type { CollectionEntry } from 'astro:content'

interface Props {
  projects: CollectionEntry<'projects'>[]
  baseUrl?: string
}

const { projects, baseUrl = '/projects' } = Astro.props
---

<ul class="flex flex-col gap-4">
  {
    projects.map((project) => (
      <li class="flex min-h-16 flex-row gap-2">
        <div class="flex flex-col">
          <h3 class="text-lg lowercase underline decoration-orange-600 decoration-2">
            <a
              class="hover:bg-orange-600 hover:text-stone-800"
              href={`${baseUrl}/${project.slug}`}
            >
              {project.data.name}
            </a>
          </h3>
          <p class="line-clamp-2 text-ellipsis text-stone-500 dark:text-stone-300">
            {project.data.description}
          </p>
        </div>
      </li>
    ))
  }
</ul>
